<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="FinancasApp.Mobile.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:FinancasApp.Mobile.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters globais -->
            <converters:AmountToColorConverter x:Key="AmountToColorConverter" />
            <!-- Fallback caso queira voltar ao estilo antigo -->
            <x:Boolean x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>