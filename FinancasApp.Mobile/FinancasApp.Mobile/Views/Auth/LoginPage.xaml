<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FinancasApp.Mobile.Views.Auth.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FinancasApp.Mobile.ViewModels"
             x:DataType="vm:LoginViewModel"
             Title="Login"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="20"
                             VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

            <!-- Título -->
            <Label Text="Bem-vindo ao FinançasApp"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#512BD4" />

            <!-- Email -->
            <Entry Placeholder="E-mail"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   FontSize="16" />

            <!-- Senha -->
            <Entry Placeholder="Senha"
                   Text="{Binding Password}"
                   IsPassword="True"
                   FontSize="16" />

            <!-- Mensagem de erro -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center" />

            <!-- Botão Login -->
            <Button Text="Entrar"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold" />

            <!-- Biometria -->
            <Label Text="Entrar com biometria"
                   TextColor="#512BD4"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BiometricLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>

            <!-- Registrar -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Novo aqui? "
                       TextColor="Gray" />
                <Label Text="Criar conta"
                       TextColor="#512BD4">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#512BD4" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
