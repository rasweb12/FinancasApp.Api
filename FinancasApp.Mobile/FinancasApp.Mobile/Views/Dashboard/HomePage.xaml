<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FinancasApp.Mobile.Views.Dashboard.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:FinancasApp.Mobile.Converters"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             Title="Dashboard"
             BackgroundColor="#F8F9FA">

    <ContentPage.Resources>
        <converters:AmountToColorConverter x:Key="AmountToColorConverter" />
    </ContentPage.Resources>

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsBusy}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="18">

                <!-- SALDO TOTAL -->
                <Frame BackgroundColor="#512BD4"
                       CornerRadius="16"
                       Padding="20"
                       HasShadow="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="Saldo Total"
                               TextColor="White"
                               FontSize="16" />

                        <Label Grid.Row="1"
                               Text="{Binding TotalBalance, StringFormat='{0:C}'}"
                               TextColor="White"
                               FontSize="34"
                               FontAttributes="Bold" />
                    </Grid>
                </Frame>

                <!-- STATUS -->
                <Label Text="{Binding StatusMessage}"
                       HorizontalOptions="Center"
                       FontSize="14"
                       TextColor="#6C757D"
                       Margin="0,4,0,0" />

                <!-- GRÁFICO - Evolução do Saldo -->
                <Frame BackgroundColor="White"
                       CornerRadius="16"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Evolução do Saldo"
                               FontAttributes="Bold"
                               FontSize="16"
                               HorizontalOptions="Center" />

                        <lvc:CartesianChart
                            Series="{Binding BalanceSeries}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}"
                            HeightRequest="240"
                            LegendPosition="Hidden" />
                    </VerticalStackLayout>
                </Frame>

                <!-- ÚLTIMAS TRANSAÇÕES -->
                <Frame BackgroundColor="White"
                       CornerRadius="16"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Movimentações Recentes"
                               FontAttributes="Bold"
                               FontSize="18"
                               Margin="0,0,0,10" />

                        <CollectionView ItemsSource="{Binding RecentTransactions}"
                                        HeightRequest="320"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12"
                                          ColumnDefinitions="*,Auto,Auto">

                                        <Label Text="{Binding Description}"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />

                                        <Label Grid.Column="1"
                                               Text="{Binding Amount, StringFormat='{0:C}'}"
                                               TextColor="{Binding Amount, Converter={StaticResource AmountToColorConverter}}"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End" />

                                        <Label Grid.Column="2"
                                               Text="{Binding Date, StringFormat='{0:dd/MM}'}"
                                               FontSize="12"
                                               TextColor="#6C757D"
                                               VerticalOptions="Center"
                                               Margin="10,0,0,0" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- BOTÃO FLUTUANTE -->
                <Grid>
                    <Button Text="+"
                            FontSize="32"
                            WidthRequest="64"
                            HeightRequest="64"
                            CornerRadius="32"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            Margin="0,10,10,20"
                            Command="{Binding AddTransactionCommand}" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>
