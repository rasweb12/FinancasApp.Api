<?xml version="1.0" encoding="utf-8" ?>
<!-- ESSA LINHA É OBRIGATÓRIA NOS ARQUIVOS MAUI XAML -->
<Shell
    x:Class="FinancasApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:FinancasApp.Mobile.Views.Auth"
    xmlns:dashboard="clr-namespace:FinancasApp.Mobile.Views.Dashboard"
    xmlns:accounts="clr-namespace:FinancasApp.Mobile.Views.Accounts"
    xmlns:creditcards="clr-namespace:FinancasApp.Mobile.Views.CreditCards"
    xmlns:reports="clr-namespace:FinancasApp.Mobile.Views.Reports"
    FlyoutBehavior="Flyout">

    <!-- LOGIN E REGISTER (não aparecem no menu) -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Route="register"
        ContentTemplate="{DataTemplate auth:RegisterPage}"
        FlyoutItemIsVisible="False" />

    <!-- DASHBOARD — PÁGINA INICIAL -->
    <ShellContent
        Route="home"
        Title="Início"
        Icon="home.png"
        ContentTemplate="{DataTemplate dashboard:HomePage}" />

    <!-- MENU LATERAL -->
    <FlyoutItem Title="Contas" Icon="account_balance.png">
        <ShellContent Route="accounts" ContentTemplate="{DataTemplate accounts:AccountsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Cartões" Icon="credit_card.png">
        <ShellContent Route="creditcards" ContentTemplate="{DataTemplate creditcards:CreditCardsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Relatórios" Icon="bar_chart.png">
        <ShellContent Route="reports" ContentTemplate="{DataTemplate reports:ReportsPage}" />
    </FlyoutItem>

</Shell>
