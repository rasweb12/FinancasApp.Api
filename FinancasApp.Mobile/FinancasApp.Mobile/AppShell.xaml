    <ShellContent
        Route="register"
        ContentTemplate="{DataTemplate auth:RegisterPage}"
        FlyoutItemIsVisible="False" />

    <!-- ðŸ  HOME -->
    <FlyoutItem
        Route="home"
        Title="InÃ­cio"
        Icon="home.png"
        FlyoutItemIsVisible="{Binding IsAuthenticated}">
        <ShellContent ContentTemplate="{DataTemplate dashboard:HomePage}" />
    </FlyoutItem>

    <!-- ðŸ“‚ MENU -->
    <FlyoutItem
        Title="Contas"
        Icon="account_balance.png"
        FlyoutItemIsVisible="{Binding IsAuthenticated}">
        <ShellContent Route="accounts"
                      ContentTemplate="{DataTemplate accounts:AccountsPage}" />
    </FlyoutItem>

    <FlyoutItem
        Title="CartÃµes"
        Icon="credit_card.png"
        FlyoutItemIsVisible="{Binding IsAuthenticated}">
